<Page
    x:Class="Views.Tela2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ListBox Name="listaID">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Background="AliceBlue"
                                Width="420"
                                Height="200">
                        <TextBlock Name="idNome"
                                   Text="{Binding }"
                                   Width="40"
                                   FontSize="30"/>
                        <TextBlock Name="idNomeReposito"
                                   Text="{Binding }"
                                   Width="40"
                                   FontSize="30"/>
                        <TextBlock Name="idDescriReposito"
                                   Text="{Binding }"
                                   Width="40"
                                   FontSize="30"/>
                        <TextBlock Name="idNumeroStars"
                                   Text="{Binding }"
                                   Width="40"
                                   FontSize="30"/>
                        <TextBlock Name="idNumeroForks"
                                   Text="{Binding }"
                                   Width="40"
                                   FontSize="30"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
</Page>
